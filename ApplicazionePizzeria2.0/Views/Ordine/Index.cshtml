@model IEnumerable<ApplicazionePizzeria2._0.Models.Ordine>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdOrdine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.indirizzoSpedizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoteAggiuntive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDellaConsegna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdOrdine)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.indirizzoSpedizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoteAggiuntive)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataDellaConsegna)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utente.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdOrdine">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdOrdine">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdOrdine">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>



<div class="col-12">
    <div class="mb-3">
        <button id="btnTotaleIncassatoInData">Totale Incassato In Data: </button>
        <input id="idinputDate" type="date" />
    </div>
    <button id="btnOrdiniEvasi">Totale Ordini Evasi</button>
</div>

<div class="col-12">
    <p id="outputElement"></p>
</div>



@section Scripts {
    <script>

        const BtnOrdiniTot = document.getElementById("btnOrdiniEvasi");
        const btnTotaleIncassatoInData = document.getElementById("btnTotaleIncassatoInData");

        const MyFetch = () => {
            fetch("/Ordine/FetchTotOrdniEvasi")
                .then(response => response.json())
                .then(data => {
                    pOutput = document.getElementById("outputElement");
                    pOutput.innerHTML = `Totale ordini evasi: ${data}`;
                })
        }

        document.addEventListener("DOMContentLoaded", () => {

            BtnOrdiniTot.addEventListener("click", () => {
                MyFetch();
            })

            btnTotaleIncassatoInData.addEventListener("click", () => {

                const inputDate = document.getElementById("idinputDate").value;

                fetch(`/Ordine/FetchTotIncassatoInData?data=${inputDate}`)
                    .then(response => response.json())
                    .then(data => {
                        pOutput = document.getElementById("outputElement");
                        pOutput.innerHTML = `Totale incassato in data: ${data}`;
                    })
            })


        })
    </script>
}