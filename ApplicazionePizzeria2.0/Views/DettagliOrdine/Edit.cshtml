@model ApplicazionePizzeria2._0.Models.DettagliOrdine

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <div class="row">
        <div class="col-12">
			<h1>Edit</h1>
        </div>
    </div>


    <div class="row">
        <div class="col-12">

            <h4>DettagliOrdine</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <div class="my-3">


                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="IdDettagliOrdine" />
                            <div class="form-group my-2">
                                <label asp-for="IdOrdine" class="control-label"></label>
                                <select asp-for="IdOrdine" class="form-control" asp-items="ViewBag.IdOrdine"></select>
                                <span asp-validation-for="IdOrdine" class="text-danger"></span>
                            </div>
                            <div class="form-group my-2">
                                <label asp-for="IdProdotto" class="control-label"></label>
                                <select asp-for="IdProdotto" class="form-control" asp-items="ViewBag.IdProdotto"></select>
                                <span asp-validation-for="IdProdotto" class="text-danger"></span>
                            </div>
                            <div class="form-group my-2">
                                <label asp-for="Quantita" class="control-label"></label>
                                <input asp-for="Quantita" class="form-control" />
                                <span asp-validation-for="Quantita" class="text-danger"></span>
                            </div>
                            <div class="form-group my-2">
                                <label asp-for="Prezzo" class="control-label"></label>
                                <input asp-for="Prezzo" class="form-control" />
                                <span asp-validation-for="Prezzo" class="text-danger"></span>
                            </div>
                            <div class="form-group my-2">
                                <label asp-for="CostoTotale" class="control-label"></label>
                                <input asp-for="CostoTotale" class="form-control" value="@ViewBag.costoTotale" />
                                <span asp-validation-for="CostoTotale" class="text-danger"></span>
                            </div>
                            <div class="form-group my-5 form-check">
                                <label class="form-check-label">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input fs-3" type="checkbox" role="switch" id="flexSwitchCheckDefault" asp-for="OrdineEvaso">
                                        <p class="fs-3 d-flex align-items-center m-0">  L'ordine è stato evaso?</p>
                                    </div>
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
